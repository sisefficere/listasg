generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model anunciantes {
  id            Int            @id(map: "inicial_pkey") @default(autoincrement())
  nome_empresa  String         @unique
  slug          String?        @unique
  descricao     String?
  endereco      String?
  telefone      String
  src_image     String?
  categoria     Int?
  subcategoria  Int?
  taxonomia     Int?
  email         String?
  instagram     String?
  facebook      String?
  whatsapp      String?
  website       String?
  end_ref       String?
  status        Boolean?
  taxonomias    taxonomia?     @relation(fields: [taxonomia], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ref_taxonomia")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
}

model taxonomia {
  id             Int             @id @default(autoincrement())
  nome           String          @unique
  slug           String?         @unique
  descricao      String?
  parentId       Int?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime?       @updatedAt
  parent         taxonomia?      @relation("Comment Children", fields: [parentId], references: [id]) // categoria pai
  children       taxonomia[]     @relation("Comment Children") // subcategorias
  anunciantes    anunciantes[]
}

model usuario {
  id    Int     @id @default(autoincrement())
  nome  String?
  email String  @unique
  senha String
}
