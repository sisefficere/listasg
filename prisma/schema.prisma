generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model anunciantes {
  id            Int            @id(map: "inicial_pkey") @default(autoincrement())
  nome_empresa  String         @unique
  slug          String?         @unique
  descricao     String?
  endereco      String?
  telefone      String
  src_image     String?
  categoria     Int?
  subcategoria  Int?
  email         String?
  instagram     String?
  facebook      String?
  whatsapp      String?
  website       String?
  end_ref       String?
  categorias    categorias?    @relation(fields: [categoria], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ref_categoria")
  subcategorias subcategorias? @relation(fields: [subcategoria], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ref_subcategoria")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
}

model categorias {
  id             Int             @id @default(autoincrement())
  nome           String          @unique
  slug           String?          @unique
  descricao      String?
  anunciantes    anunciantes[]
  classificacao  Int?
  classificacoes classificacoes? @relation(fields: [classificacao], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "classificacao")
  subcategorias  subcategorias[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime?       @updatedAt
}

model taxonomia {
  id            Int          @id @default(autoincrement())
  nome          String       @unique
  slug          String?      @unique
  classificacao Int?
  descricao     String?
  parentId      Int?
  parent        taxonomia?  @relation("Comment Children", fields: [parentId], references: [id]) // categoria pai
  children      taxonomia[] @relation("Comment Children") // subcategorias
  createdAt     DateTime     @default(now())
  updatedAt     DateTime?    @updatedAt
}

model classificacoes {
  id         Int          @id @default(autoincrement())
  nome       String       @unique
  slug       String?       @unique
  categorias categorias[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime?    @updatedAt
}

model subcategorias {
  id          Int           @id @default(autoincrement())
  nome        String        @unique
  slug        String?        @unique
  categoria   Int?
  descricao   String?
  anunciantes anunciantes[]
  categorias  categorias?   @relation(fields: [categoria], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "categoria")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?     @updatedAt
}

model usuario {
  id   Int     @id @default(autoincrement())
  nome String?
  email String @unique
  senha String
}